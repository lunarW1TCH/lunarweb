---
import type { CollectionEntry } from 'astro:content';
import { flex } from '~panda/patterns';
import H1 from '../mdx/H1.astro';
import P from '../mdx/P.astro';
import { ArrowUpRight } from 'lucide-astro';
import { css } from '~panda/css';
import BaseLink from '../ui/BaseLink.vue';
import BaseBadge from '../ui/BaseBadge.vue';

type Props = {
  project: CollectionEntry<'project'>;
};

const { project } = Astro.props;
---

<div
  class={flex({
    border: '1px solid',
    borderColor: 'border.subtle',
    p: '4',
    w: '100%',
    maxW: '750px',
    rounded: 'md',
    flexDir: 'column',
    bgColor: 'bg.default',
    shadow: 'md',
  })}
>
  <H1
    class={css({
      display: project.body ? undefined : 'none',
    })}
  >
    <BaseLink href={`/projects/${project.slug}`}>
      {project.data.title}
      <ArrowUpRight
        className={css({
          w: '16px',
          h: '16px',
          mb: '2.5',
        })}
      />
    </BaseLink>
  </H1>
  <P>{project.data.shortDescription}</P>
  <div
    class={flex({
      flexWrap: 'wrap',
      gap: '2',
      mt: '2',
    })}
  >
    {
      project.data.technologies.map((tech) => (
        <BaseBadge>
          <BaseLink href={tech.link}>{tech.name}</BaseLink>
        </BaseBadge>
      ))
    }
  </div>
</div>
