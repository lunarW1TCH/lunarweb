---
import '@fontsource-variable/fira-code';
import { css } from 'styled-system/css';
import '../styles/index.css';
import '@fontsource-variable/dosis';
import { ViewTransitions } from 'astro:transitions';

import BaseNavigation from '~/components/BaseNavigation.vue';

type Props = {
  title?: string;
};

const { pathname } = Astro.url;

const { title = 'Lunarweb' } = Astro.props;
---

<!doctype html>
<html lang='en' class='dark'>
  <head>
    <meta charset='UTF-8' />
    <meta
      name='description'
      content="Lunarweb is Adrian Żegnałek's portfolio website"
    />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/png' href='/favicon.png' />
    <meta name='generator' content={Astro.generator} />
    <ViewTransitions />
    <title>{title}</title>
  </head>
  <body
    class={css({
      minH: '100vh',
      display: 'flex',
      flexDir: 'column',
      fontFamily: 'dosis',
    })}
  >
    <!-- <Navigation transition:persist {pathname} client:load /> -->
    <BaseNavigation {pathname} client:load />
    <main
      class={css({
        display: 'flex',
        flexDir: 'column',
        flexGrow: 1,
        justifyContent: 'center',
        alignItems: 'center',
        mt: '80px',
        mx: '4',
      })}
    >
      <slot />
    </main>
  </body>
</html>
